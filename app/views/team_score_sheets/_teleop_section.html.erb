<div class="cell small-5"><h1>PARKED?</h1></div>
<div class="cell small-6">
  <%= form_with(url: park_competition_match_team_score_sheet_path(@match.competition, @match.id, @team_score_sheet.id)) do |form| %>
    <div class="switch large">
      <%= check_box_tag(
            "PARK",
            @team_score_sheet.park?,
            @team_score_sheet.park?,
            onchange: "this.form.requestSubmit();",
            class: "switch-input",
            name: "park",
            id: "park"
          )
      %>
      <label class="switch-paddle" for="park">
        <span class="show-for-sr">PARK</span>
        <span class="switch-active" aria-hidden="true"><h1>Yes</h1></span>
        <span class="switch-inactive" aria-hidden="true"><h1>No</h1></span>
      </label>
    </div>
  <% end %>
</div>

