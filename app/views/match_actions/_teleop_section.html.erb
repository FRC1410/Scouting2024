<div class="cell large-10">
  <%= button_to("ENABLE AUTO", toggle_auto_match_match_action_path(@match.id, @match_action.id, show_section: :auto), class: "button expanded") %>
</div>
<div class="cell expanded">
  SPEAKER SCORE
  <%= turbo_frame_tag dom_id(@match_action, :score_speaker) do %>
    <%= @match_action.score_speaker %>
  <% end %>
</div>

<div class="cell small-6">
  <%= button_to("SPEAKER", score_speaker_match_match_action_path(@match.id, @match_action.id, increment: 1), class: "button expanded") %>
</div>
<div class="cell small-2">
  <%= button_to("UNDO", score_speaker_match_match_action_path(@match.id, @match_action.id, increment: -1), class: "button expanded alert") %>
</div>
<div class="cell expanded">
  AMP SCORE
  <%= turbo_frame_tag dom_id(@match_action, :score_amp) do %>
    <%= @match_action.score_amp %>
  <% end %>
</div>
<div class="cell small-6">
  <%= button_to("AMP", score_amp_match_match_action_path(@match.id, @match_action.id, increment: 1), class: "button expanded") %>
</div>
<div class="cell small-2">
  <%= button_to("UNDO", score_amp_match_match_action_path(@match.id, @match_action.id, increment: -1), class: "button expanded alert") %>
</div>