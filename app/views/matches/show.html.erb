<%= button_to "Delete this match", competition_match_path(@match.competition, @match), method: :delete, class: "button" %>
<%= button_to "Unlock All Scoring", unlock_competition_match_path(@match.competition, @match), method: :post, class: "button" %>
<table class="hover">
  <thead>
  <tr>
    <th><strong>Number</strong></th>
    <th>Red Alliance Teams</th>
    <th>Blue Alliance Teams</th>
    <th>Notify Scouts</th>
  </tr>
  </thead>
  <tbody id="matches">
  <tr>
    <td><strong><%= @match.match_number %></strong></td>
    <td><%= @match.red_alliance.teams.pluck(:number).join(", ") %></td>
    <td><%= @match.blue_alliance.teams.pluck(:number).join(", ") %></td>
    <td>
      <%= button_to "Notify", notify_competition_match_path(@match.competition, @match), form: {data: {turbo: true}}, class: "button" %>
    </td>
  </tr>
  </tbody>
</table>

<%= link_to "All Matches", competition_matches_path(@match.competition), class: "button" %>